<Window x:Class="ModbusCrcCalculator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ModbusCrcCalculator"
        mc:Ignorable="d"
        Title="MODBUS-16 CRC" Height="350" Width="600"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="20"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="10"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Поля ввода MODBUS параметров -->
        <StackPanel Grid.Row="0" Orientation="Horizontal">
            <StackPanel Margin="0,0,10,0">
                <Label Content="Адрес устройства:" FontSize="10"/>
                <TextBox x:Name="DeviceAddressTextBox" Text="01" Width="50" MaxLength="2" TextChanged="OnInputChanged"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <Label Content="Команда:" FontSize="10"/>
                <TextBox x:Name="CommandTextBox" Text="03" Width="50" MaxLength="2" TextChanged="OnInputChanged"/>
            </StackPanel>

            <StackPanel Margin="0,0,10,0">
                <Label Content="Адрес регистра:" FontSize="10"/>
                <TextBox x:Name="RegisterAddressTextBox" Text="00 60" Width="70" MaxLength="5" TextChanged="OnInputChanged"/>
            </StackPanel>

            <StackPanel>
                <Label Content="Количество регистров:" FontSize="10"/>
                <TextBox x:Name="RegisterCountTextBox" Text="00 06" Width="70" MaxLength="5" TextChanged="OnInputChanged"/>
            </StackPanel>
        </StackPanel>

        <!-- Поле ввода hex-строки -->
        <Label Grid.Row="2" Content="Введите hex-строку:" FontWeight="Bold"/>
        <TextBox Grid.Row="3" x:Name="HexStringTextBox" Text="01 03 00 60 00 06" 
                 FontFamily="Consolas" FontSize="12" TextChanged="OnInputChanged"/>

        <!-- Результат -->
        <Label Grid.Row="5" Content="Результат:" FontWeight="Bold"/>
        <TextBox Grid.Row="6" x:Name="ResultTextBox" IsReadOnly="True" 
                 FontFamily="Consolas" FontSize="12" Background="LightGray"/>

        <!-- Полная строка с CRC -->
        <Label Grid.Row="8" x:Name="FullStringLabel" Content="Полная строка с CRC (клик для копирования):" 
               FontFamily="Consolas" FontSize="12" Background="LightBlue" 
               Padding="5" Cursor="Hand" MouseLeftButtonUp="OnFullStringClick"
               ToolTip="Нажмите для копирования в буфер обмена"/>
    </Grid>
</Window>
